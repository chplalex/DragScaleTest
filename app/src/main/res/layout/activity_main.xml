<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include layout="@layout/content_container"/>

    <ImageView
        android:id="@+id/metro_map_center_focus_icon"
        android:layout_width="@dimen/metro_map_center_focus_icon_size"
        android:layout_height="@dimen/metro_map_center_focus_icon_size"
        android:src="@drawable/ic_center_focus"
        android:elevation="@dimen/elevation"
        android:layout_margin="@dimen/metro_map_center_focus_icon_margin"
        android:layout_gravity="bottom|end"
        tools:src="@tools:sample/backgrounds/scenic" />

</FrameLayout>